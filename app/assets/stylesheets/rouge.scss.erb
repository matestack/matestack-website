<% require 'rouge' %>
<%= Rouge::Themes::Base16.mode(:dark).new.render %>

.highlight{
  padding: 5px 15px 5px 15px;
  margin-bottom: 20px;
  @media only screen and (max-width: 600px) {
    overflow: scroll;
    font-size: 10px;
  }
  @media only screen and (max-width: 400px) {
    overflow: scroll;
    font-size: 8px;
  }
}

pre.highlight{
  display: block;
  white-space: pre-wrap;
}

.n{
  color: #ea2f0e;
}
